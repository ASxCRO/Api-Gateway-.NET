
@namespace AutoStoper.Client.Shared.Components

<EditForm Model="@profileModel" OnValidSubmit="ChangePasswordAsync">
    <MudCard Elevation="25">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText>"Promjenite lozinku</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" @bind-Value="newPassword" For="@(() => newPassword)" Label="Lozinka" Variant="Variant.Outlined" InputType="InputType.Password" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" @bind-Value="newPassword2" For="@(() => newPassword2)" Label="Ponovite lozinku" Variant="Variant.Outlined" InputType="InputType.Password" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField T="string" @bind-Value="todayPassword" For="@(() => todayPassword)" Label="Sadašnja lozinka" Variant="Variant.Outlined" InputType="InputType.Password" />
                </MudItem>
            </MudGrid>
        </MudCardContent>
        <MudCardActions Class="pb-4 pl-4">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" ButtonType="ButtonType.Submit" Class="ml-auto">Promjenite lozinku</MudButton>
        </MudCardActions>
    </MudCard>
</EditForm>